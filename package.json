{
  "name": "cowtown",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "git@github.com:cdaringe/cowtown.git",
  "author": "cdaringe <christopher.dieringer@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "tsc",
    "clean:deps": "for p in $(ls packages/); do echo $p && rm -rf packages/$p/{node_modules,*.lock}; done;",
    "test": "lerna exec -- yarn test",
    "format": "prettier-standard '{src,test,scripts,packages}/**/*.{js,ts,tsx}'",
    "lint": "eslint '{src,test,scripts,packages}/**/*.{ts,tsx}' --fix"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "husky": "^2.0.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier-standard": "^9.1.1",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test,scripts,packages}/**/*.{ts,tsx}": [
        "yarn format",
        "yarn lint",
        "git add"
      ]
    }
  },
  "dependencies": {
    "eslint": "^5.15.3",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^9.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0"
  }
}
