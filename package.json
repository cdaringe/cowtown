{
  "name": "cowtown",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "git@github.com:cdaringe/cowtown.git",
  "author": "cdaringe <christopher.dieringer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "tsc",
    "test": "lerna exec -- yarn test",
    "format": "prettier-standard '{src,test,scripts,packages}/**/*.{js,ts,tsx}'",
    "lint": "standard '{src,test,scripts,packages}/**/*.{js,ts,tsx}'"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "@typescript-eslint/parser": "^1.5.0",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.5",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1",
    "typescript": "^3.1.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test,scripts,packages}/**/*.{js,ts,tsx}": [
        "yarn format",
        "yarn lint",
        "git add"
      ]
    }
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "standardPlugins": [
      "typescript"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  }
}
